<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pm.iut.fr.tvday.chaines.ChainesDetailFragment">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/programme_titre_ch"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:context="pm.iut.fr.tvday.programmes.ChainesDetailFragment" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/programme_description_ch"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:context="pm.iut.fr.tvday.programmes.ChainesDetailFragment"
        android:layout_below="@id/programme_titre_ch"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/programme_lien_ch"
        style="?android:attr/textAppearanceLarge"
        android:padding="16dp"
        android:textIsSelectable="true"
        tools:context="pm.iut.fr.tvday.programmes.ChainesDetailFragment"
        android:layout_below="@id/programme_description_ch"
        android:autoLink="web"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chaine_note"
        android:padding="16dp"
        android:textIsSelectable="true"
        style="?android:attr/textAppearanceLarge"
        tools:context="pm.iut.fr.tvday.chaines.ChainesDetailFragment"
        android:layout_below="@id/programme_lien_ch"/>

</RelativeLayout>
